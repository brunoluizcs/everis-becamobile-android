        android:layout_height="match_parent"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        tools:listitem="@layout/movies_list_item"
        tools:itemCount="4"

        />


</androidx.constraintlayout.widget.ConstraintLayout>